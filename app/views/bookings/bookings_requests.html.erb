<div class="yoga-img">
  <div class="container">
    <h1 class="booking-requests"> Booking Requests </h1>
    <% @bookings_requested.each do |booking| %>

      <div class="booking-product">
        <% if booking.service.photo.attached? %>
          <%= cl_image_tag booking.service.photo.key, crop: :fill %>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/dhj0qswpc/image/upload/v1614381454/Mask_Group-1_rihl6o.jpg",  class: "book-img" %>
        <% end %>
        <div class="booking-product-infos">
          <h2 class="booked"><span class="redtext"><%= booking.service.trainer.first_name %></span> has requested to book for <%=(((booking.end_date).to_time - (booking.start_date).to_time) / 3_600).round%> hours</h2>
          <p class="b-dates"><b>From</b> <%= booking.start_date.strftime("%A, %d %b %Y %l:%M %p") %> <br> <b>To</b> <%= booking.end_date.strftime("%A, %d %b %Y %l:%M %p") %></p>
          <h4 class="pending"><%= booking.status ? 'Confirmed' : 'Pending confirmation' %></h4>
          <h3 class="price"><b>Total price:</b> Â£<%= booking.service.price_per_hour.to_i * ((booking.end_date).to_time - (booking.start_date).to_time)/ 3_600 %></h3>
          <%= simple_form_for booking do |f| %>

            <div class="confirmbooking ">
              Confirm <%= f.input_field :status, as: :boolean, checked_value: true, unchecked_value: false %>
              <%= f.button :submit, "Confirm", :class => 'confirmbutton btn btn-dark'  %>
          <% end %>
          </div>

          <div class="brequest-button">
            <div class="btn btn-dark booking-button request-button">
              <%= link_to "Edit my Booking", edit_booking_path(booking), class:"text-white" %>
            </div>

            <div class="btn btn-dark booking-button request-button">
              <%= link_to 'Decline booking',
                          booking_path(booking),
                          method: :delete,
                          data: { confirm: "Please press ok if you want to cancel your booking or cancel to go back to your booking" } %>
            </div>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>