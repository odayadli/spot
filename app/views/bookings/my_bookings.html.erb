<h1>This is the my booking index page</h1>

<div class="container" style="margin-top: 110px">
  <h1>My Bookings</h1><br><br>
  <h3><%= @current_bookings.count %> current booking<%= @current_bookings.count == 1 ? '' : 's' %></h3><br><br>

  <div>
    <div class="row justify-content-center">
      <div class="col-8">
        <% @current_bookings.each do |booking| %>
          <%= render 'shared/booking', booking: booking, service: booking.service %>
        <% end %>
      </div>
    </div>
  </div>
  <br>
  <br>
  <br>
  <h3>Previous bookings</h3>
  <div>
    <div class="row justify-content-center">
      <div class="col-8">
        <% @old_bookings.each do |booking| %>
          <%= render 'shared/booking', booking: booking, service: booking.service %>
        <% end %>
      </div>
    </div>
  </div>
</div>
