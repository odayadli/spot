<div class="background-login"></div>
  <div class="centered">


    <h2 class="account-login" style="color: black">Account Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email" }, input_html: { class: 'input-login log' } %>
        <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password" }, input_html: { class: 'input-login log' } %>
          <%= f.input  :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
              
        
        <div class="links">
          <%= render "devise/shared/links" %>
        </div>
       
      <div class="d-flex justify-content-center">
          <div class="form-actions btn btn-dark login-button">
            <%= f.button :submit, "Log in" %>
          </div>
      </div>
      
          <% end %>
</div>


