<%= @service.trainer.email %>
<% if @service.trainer.profile_pic.attached? %>
  <%= cl_image_tag @service.trainer.profile_pic, class: "card-image-index", height: 280, width: 322, crop: :fill %>
<% else %>
  <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
<% end %>
<p><%= @service.details %></p>
<%= @service.price_per_hour %>
<%= @service.category.name %>


<%= @service.service_address %>
<h4> <%= @service.indoor ? 'Indoor service' : 'Outdoor service' %></h4>
<%=  link_to "add a category", new_category_path%>
<%= link_to 'delete service',
            service_path(@service),
            method: :delete,
            data: { confirm: "Please press ok if you want to delete your service or cancel to go back to your service" } %>
<div>
  <ul class="list-group">
    <% @booking.reviews.each do |review| %>
      <li class="list-group-item">
        <div class="d-flex justify-content-start align-items-center">
          <% if current_user.profile_pic.attached? %>
            <%= cl_image_tag review.user.profile_pic.key, class: "avatar m-3"  %>
          <% else %>
            <%= image_tag "https://icon-library.com/images/no-profile-pic-icon/no-profile-pic-icon-12.jpg", class: "avatar m-3" %>
          <% end %>
          <div>
            <% review.rating.times do %>
              <i class="fas fa-star"></i>
            <% end %>
            <p><%= review.description %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
