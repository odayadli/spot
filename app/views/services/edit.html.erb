
<%= simple_form_for @service do |f| %>
  <%= f.input :details %>
  <%= f.input :price_per_hour %>
  <%= f.input :service_address %>
  <%= f.association :category, input_html: { class: 'select2'}  %>
  <%= f.input :indoor, as: :boolean, checked_value: true, unchecked_value: false %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
